<Window x:Class="_3.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3"
        mc:Ignorable="d"
        Title="AuthorizationWindow" 
        Height="184" 
        Width="240" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner" 
        Closing="WindowClosing" 
        Background="#252525">
    <Grid Margin="20" >
        <StackPanel>
            <PasswordBox x:Name="PasswordTextBox" PasswordChar="*" Height="25" Margin="0,0,0,15" Background="#252525" Foreground="LightGray"/>
            <Button Content="Войти" Height="25" Margin="0,0,0,15" IsDefault="True" Click="Check" Background="#252525" Foreground="LightGray"/>
            <Button Content="Выйти" Height="25" IsCancel="True" Click="Close" Background="#252525" Foreground="LightGray"/>
        </StackPanel>
    </Grid>
</Window>
